# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Encryption Salt (required for credential decryption)
SALT=your-encryption-salt-here

# Test Environment URLs
BASE_URL=https://rahulshettyacademy.com/client
API_BASE_URL=https://rahulshettyacademy.com/api

# WebSocket endpoint for remote testing (optional)
PW_TEST_CONNECT_WS_ENDPOINT=ws://127.0.0.1:3000/

# Test Credentials (encrypted - use your actual encrypted values)
userid=your-encrypted-userid-here
password=your-encrypted-password-here

# Test Configuration
TEST_TIMEOUT=30000
RETRY_COUNT=1
WORKERS=2

# Reporting
ALLURE_RESULTS_DIR=allure-results
PLAYWRIGHT_REPORT_DIR=playwright-report